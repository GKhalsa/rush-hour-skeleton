<div class="row">
  <div class="col s9">
    <div class="card-panel card_overlay round_card card-large">
      <div class="container">
        <h3 id="registration_form" class="white-text">register your site here</h3>
      </div>
      <div class="row">
        <form class="col s12" action="/sources" method="post">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix white-text">perm_identity</i>
              <input id="icon_identity" type="text" class="validate white-text" name="identifier" value="unique identifier">
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix white-text">web</i>
              <input id="icon_web" type="tel" class="validate white-text" name="rootUrl" value="root url for your site">
            </div>
            <div class="input-field col s2 offset-s9">
              <input type="submit" value="Submit"/>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
